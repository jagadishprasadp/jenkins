pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/jagadishprasadp/jenkins.git',
                    credentialsId: 'project-deploy'
            }
        }
        stage('Run Tests') {
            steps {
                // Use a Windows-compatible command
                bat 'run-tests.bat' // Replace with actual test command
            }
        }
        stage('Deploy to EC2') {
            steps {
                // Replace with a PowerShell or appropriate command
                bat 'deploy-to-ec2.ps1' // Replace with actual deployment command
            }
        }
    }
    post {
        failure {
            echo 'Pipeline failed! Please check the logs for more details.'
        }
    }
}
