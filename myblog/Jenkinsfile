pipeline {
    agent any
    stages {
        stage('Run Batch Command') {
            steps {
                // Run a basic batch command to confirm setup
                bat 'echo Running a batch command in Jenkins on Windows'
            }
        }
        stage('Run Test Script') {
            steps {
                // Run your actual test script or command
                bat 'run-tests.bat'
            }
        }
    }
    post {
        failure {
            echo 'Pipeline failed! Check batch command for issues.'
        }
    }
}
