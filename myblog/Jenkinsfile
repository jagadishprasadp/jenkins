pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/jagadishprasadp/jenkins.git',
                    credentialsId: '4f990259-2d2f-4c0b-a7ab-be39ea5c59bf'
            }
        }
        stage('Verify Python Installation') {
            steps {
                bat 'C:\\Users\\Windows\\AppData\\Local\\Programs\\Python\\Python310\\python.exe --version'
            }
        }
        stage('Setup Python Virtual Environment') {
            steps {
                bat 'C:\\Users\\Windows\\AppData\\Local\\Programs\\Python\\Python310\\python.exe -m venv venv'
            }
        }
        stage('Install Dependencies') {
            steps {
                bat '.\\venv\\Scripts\\pip install -r myblog\\requirements.txt'
            }
        }
        stage('Run Tests') {
            steps {
                bat 'echo No tests to run currently'
            }
        }
        stage('Start Application') {
            steps {
                 // Adjust the path to the manage.py file
                 bat '.\\venv\\Scripts\\python myblog\\manage.py runserver 0.0.0.0:8000'
            }
        }
    }
    post {
        failure {
            echo 'Pipeline failed! Check the logs for more details.'
        }
    }
}
